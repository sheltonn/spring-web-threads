<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level|%msg ||%class:%line %n</pattern>
        </encoder>
    </appender>

    <!-- the console defaults to INFO level-->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
